<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carsale.mapper.SystemUserMapper">
    
    <!-- 根据用户名查询用户信息 -->
    <select id="selectByUsername" resultType="com.carsale.entity.SystemUser">
        SELECT 
            user_id,
            username,
            password,
            real_name,
            role,
            status,
            last_login_time,
            created_at,
            updated_at
        FROM system_user 
        WHERE username = #{username}
    </select>
    
</mapper>